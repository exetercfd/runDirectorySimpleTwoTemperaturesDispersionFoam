FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Ts;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300.0;

boundaryField
{
    inlet
    {
        type        fixedValue;
        value       uniform 300.0;
    }

    outlet
    {
        type        zeroGradient;
    }

    wall_upper
    {
        type        wallHeatFluxSolid;
        heatFlux    uniform 50.0;
    }

    wall_lower
    {
        type        zeroGradient;
    }

    frontAndBack
    {
        type        empty;
    }
}

